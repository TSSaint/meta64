<dom-module id="x-app">
    <template>
        <style is="custom-style">
            /*<![CDATA[*/
                :host {
                    display: block;
                }   
            /*]]>*/
        </style>
        <iron-ajax id="ironAjax"></iron-ajax>

        <paper-drawer-panel
            id="paperDrawerPanel"
            responsive-width="900px">

            <paper-scroll-header-panel
                id="mainLhsMenuPanel"
                class="nav"
                drawer="drawer">
                <div class="horizontal-section">
                    <paper-menu
                        id="mainAppMenu"
                        attr-for-item-title="label"></paper-menu>
                </div>
            </paper-scroll-header-panel>

            <paper-header-panel
                class="main"
                main="main"
                mode="waterfall">

                <paper-toolbar id="mainToolbar">
                    <!-- when implemented this button will toggle visibility 
                        of left-side menu -->
                    <paper-icon-button
                        icon="menu"
                        paper-drawer-toggle="paper-drawer-toggle"></paper-icon-button>
                    <span
                        class="title"
                        onClick="m64.nav.navPublicHome();"
                        id="headerAppName">Meta64</span>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:home"
                        id="navHomeButton"
                        onClick="m64.nav.navHome();">Home</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:change-history"
                        id="upLevelButton"
                        onClick="m64.nav.navUpLevel();">Parent</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="editor:mode-edit"
                        id="editModeButton"
                        onClick="m64.edit.editMode();">Edit</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:search"
                        id="searchMainAppButton"
                        onClick="(new m64.SearchContentDlg()).open();">Search</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:schedule"
                        id="timelineMainAppButton"
                        onClick="m64.srch.timelineByModTime();">Timeline</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:settings"
                        id="userPreferencesMainAppButton"
                        onClick="(new m64.PrefsDlg()).open();">Preferences</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:account-box"
                        id="openLoginDlgButton"
                        onClick="(new m64.LoginDlg()).open();">Login</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:account-box"
                        id="navLogoutButton"
                        onClick="m64.user.logout(true);">Logout</paper-icon-button>
                    <paper-button
                        style="display:none;"
                        id="openSignupPgButton"
                        onClick="m64.user.openSignupPg();">Signup</paper-button>
                </paper-toolbar>

                <!-- Main Content -->
                <div class="content">
                    <main-tabs />
                </div>
            </paper-header-panel>
        </paper-drawer-panel>
    </template>
    <script>
        /*<![CDATA[*/
            (function() { 
            	 'use strict'; 
            	 Polymer({ is : 'x-app' }); 
            })();
        /*]]>*/
    </script>
</dom-module>
