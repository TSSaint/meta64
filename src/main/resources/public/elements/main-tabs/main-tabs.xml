<dom-module id="main-tabs">
    <template>
        <style is="custom-style">
            /*<![CDATA[*/
                :host {
                    display: block;
    
                    --paper-tab-ink: var(--paper-blue-900);
                    --paper-tabs-selection-bar-color: var(--paper-blue-900);
                }
    
                paper-ripple {
                    color: var(--paper-tab-ink, --paper-blue-900);
                }
    
                /* this style doesn't work, so I put a a god damn fucking 'style' directly into the HTML instead */
                paper-button.green{
                    background-color: var(--paper-green-500);
                    color: white;
                }
            /*]]>*/
        </style>
        <paper-tabs
            id="mainPaperTabs"
            attr-for-selected="name"
            selected="{{selected}}">
            <paper-tab name="mainTabName">Main</paper-tab>
            <paper-tab name="searchTabName">Search</paper-tab>
            <paper-tab name="timelineTabName">Timeline</paper-tab>
        </paper-tabs>

        <!-- Main App Tab Panel -->
        <iron-pages
            id="mainIronPages"
            attr-for-selected="name"
            selected="{{selected}}">
            <div name="mainTabName">
                <div id="mainNodeContent"></div>
                <div id="listView"></div>
            </div>
            <div
                name="searchTabName"
                id="searchResultsPanel">No search displaying.</div>
            <div
                name="timelineTabName"
                id="timelineResultsPanel">No timeline displaying.To see a
                Timeline, select the
                node you want the timeline off and then click
                "Search-&gt;Timeline"</div>
        </iron-pages> <!-- All modal dialogs go in here -->
        <div
            id="modalsContainer"
            style="position: absolute; top: 0; left: 0"></div>
    </template>
    <script>
        /*<![CDATA[*/
        	(function() {
        		'use strict';
        
        		Polymer({
        			is : 'main-tabs',
        			properties : {
        				selected : {
        					type : String,
        					value : 'mainTabName'
        				}
        			},
        			ready : function() {
        				console.log("polymer main-tabs ready.");
        			}
        		});
        	})();
	   /*]]>*/
    </script>
</dom-module>
